<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "myfirstapp"
        version     = "1.0.0" >

    <name>Twoja Forma</name>
    <description>Aplikacja treningowa</description>
    <author href="https://github.com/Mateuszdziedzina" email="mateusz.dziedzina1@gmail.com">
		Mateusz Dziedzina
	</author>
	<platform name="android">

	    <icon src="img/icon.png" />
	
	    <icon gap:platform="android" gap:qualifier="ldpi" src="res/icons/android/drawable-ldpi-icon.png" />
	    <icon gap:platform="android" gap:qualifier="mdpi" src="res/icons/android/drawable-mdpi-icon.png" />
	    <icon gap:platform="android" gap:qualifier="hdpi" src="res/icons/android/drawable-hdpi-icon.png" />
	    <icon gap:platform="android" gap:qualifier="xhdpi" src="res/icons/android/drawable-xhdpi-icon.png" />
	    <icon gap:platform="android" gap:qualifier="xxhdpi" src="res/icons/android/drawable-xxhdpi-icon.png" />
	    <icon gap:platform="android" gap:qualifier="xxxhdpi" src="res/icons/android/drawable-xxxhdpi-icon.png" />
	
	    <splash src="img/splash.png" />
	
	    <splash gap:platform="android" gap:qualifier="land-hdpi" src="res/screens/android/drawable-land-hdpi-screen.png" />
	    <splash gap:platform="android" gap:qualifier="land-ldpi" src="res/screens/android/drawable-land-ldpi-screen.png" />
	    <splash gap:platform="android" gap:qualifier="land-mdpi" src="res/screens/android/drawable-land-mdpi-screen.png" />
	    <splash gap:platform="android" gap:qualifier="land-xhdpi" src="res/screens/android/drawable-land-xhdpi-screen.png" />
	    <splash gap:platform="android" gap:qualifier="port-hdpi" src="res/screens/android/drawable-port-hdpi-screen.png" />
	    <splash gap:platform="android" gap:qualifier="port-ldpi" src="res/screens/android/drawable-port-ldpi-screen.png" />
	    <splash gap:platform="android" gap:qualifier="port-mdpi" src="res/screens/android/drawable-port-mdpi-screen.png" />
		<splash gap:platform="android" gap:qualifier="port-xhdpi" src="res/screens/android/drawable-port-xhdpi-screen.png" />

	</platform>

    <preference name="DisallowOverscroll" value="true" />
   
	<plugin name="cordova-plugin-splashscreen" spec = "5.0.2" />
	<plugin name="cordova-plugin-console" spec="1.1.0" />	
	<plugin name="cordova-plugin-device" spec="2.0.2" />	
	<plugin name="cordova-plugin-dialogs" spec="2.0.1" />	
	<plugin name="cordova-plugin-geolocation" spec="4.0.1" />	
	<plugin name="cordova-plugin-statusbar" spec="2.4.2" />	
	<plugin name="cordova-plugin-vibration" spec="3.1.0" />	
	<plugin name="cordova-plugin-camera" spec="2.4.0"/>	
	<plugin name="cordova-plugin-whitelist" spec="1.3.3" />	
	<plugin name="uk.co.workingedge.phonegap.plugin.launchnavigator" spec="3.2.2" />

</widget>